@model FilterViewModel

@{
    ViewData["Title"] = "Search";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="SearchResults" id="searchForm" method="get">
    <div class="form-group">
        <label for="searchTerm">Search Term:</label>
        <input type="text" class="form-control" id="searchTerm" name="searchTerm">
    </div>

   
    <div class="form-group" id="selectedFilter">
        <label asp-for="Available"><input asp-for="Available" type="checkbox" />Available</label>
        <label asp-for="Unavailable"><input type="checkbox" asp-for="Unavailable" />Unavailable</label>
        <label asp-for="FlightDate"><input type="checkbox" asp-for="FlightDate" />FlightDate</label>
        <label asp-for="Location"><input type="checkbox" asp-for="Location" />Location</label>
        <label asp-for="Destination"><input type="checkbox" asp-for="Destination" />Destination</label>
        <label asp-for="Model"><input type="checkbox" asp-for="Model" />Model</label>
        <label asp-for="Manufacturer"><input type="checkbox" asp-for="Manufacturer" />Manufacturer</label>
        <label asp-for="MinPrice"><input type="checkbox" asp-for="MinPrice" />Minimum Price</label>
        <label asp-for="MaxPrice"><input type="checkbox" asp-for="MaxPrice" />Maximum Price</label>
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>


