@model Listing


@{
    ViewData["Title"] = "Create Listing";
}

<h2>Create Listing</h2>

<form id="createListingForm" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label for="listingType">Listing Type</label>
        <select class="form-control" id="listingType">
            <option value="Flight">Flight</option>
            <option value="Hotel">Hotel</option>
            <option value="CarRental">Car Rental</option>
        </select>
    </div>

    <div>
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

  
    <div id="flightFields" style="display: none;">
       
      
        
       
    </div>

    <div id="hotelFields" style="display: none;">
       
        
      
    </div>

    <div id="carRentalFields" style="display: none;">
  
        <input type="hidden" id="listingId" name="ListingId" value="@Model.ListingId" />
       
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-warning">Cancel</a>
    </div>
</form>

@section Scripts {
    <script>
        $(function () {
            $('#listingType').change(function () {
                var selectedType = $(this).val();
                $('#flightFields').hide();
                $('#hotelFields').hide();
                $('#carRentalFields').hide();

                if (selectedType === 'Flight') {
                    $('#flightFields').show();
                } else if (selectedType === 'Hotel') {
                    $('#hotelFields').show();
                } else if (selectedType === 'CarRental') {
                    $('#carRentalFields').show();
                }
            });
        });
    </script>
}

