@model Flight

@{
    ViewData["Title"] = "Edit Flight Listing";
}


<h2>Edit Flight</h2>

<form asp-action="EditFlight" method="post">
    @Html.AntiForgeryToken()
  

    <input type="hidden" asp-for="ListingId" />
    <input type="hidden" asp-for="UserId" />
    <input type="hidden" asp-for="Available" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>




    
     <div>
          <label asp-for="FlightDate" class="control-label">Flight Date</label>
          <input asp-for="FlightDate" class="form-control" type="datetime-local" />
    </div>

        <div>
            <label asp-for="MaxPassengers" class="control-label">Maximum Passengers</label>
            <input asp-for="MaxPassengers" class="control-label" />
        </div>

        <div>
            <label asp-for="Location" class="control-label">Departure</label>
            <input asp-for="Location" class="form-control" />
        </div>

        <div>
            <label asp-for="Destination" class="control-label">Destination</label>
            <input asp-for="Destination" class="form-control" />
        </div>
    


    

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Index"  class="btn btn-secondary">Back to List</a>
    </div>


</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}